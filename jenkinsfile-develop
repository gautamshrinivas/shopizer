pipeline {
    agent { label 'shop'}
    triggers {
        pollSCM ('* * * * *')
    }
    stages {
        stage('vcs') {
            steps {
            git url : 'https://github.com/gautamshrinivas/shopizer.git',
            branch: 'develop'                
            }
        }
        stage('build') {
            steps {
                sh 'mvn clean install'
            }
        }
    }
}