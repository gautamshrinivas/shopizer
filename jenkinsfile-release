pipeline {
    agent { label 'shop'}
    triggers {
        cron('00 11 17 10 4')
    }
    stages {
        stage('vcs') {
            steps {
            git url : 'https://github.com/gautamshrinivas/shopizer.git',
            branch: 'release'                
            }
        }
        stage('build') {
            steps {
                sh 'mvn clean install'
            }
        }
    }
}